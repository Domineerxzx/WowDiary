<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_logo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true">

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:background="@mipmap/logo" />

        <TextView
            android:id="@+id/tv_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/iv_logo"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_logo"
            android:text="喔日记"
            android:textColor="#000"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_app_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_app_name"
            android:layout_alignLeft="@id/tv_app_name"
            android:layout_marginTop="10dp"
            android:text="记录精彩每一天！！！"
            android:textColor="#878787"
            android:textSize="10dp" />


        <TextView
            android:id="@+id/tv_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="40dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="50dp"
            android:text="加载中..."
            android:textColor="#000"
            android:textSize="10dp"
            android:textStyle="bold" />

        <ProgressBar
            android:id="@+id/pb_upload_data"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_above="@id/tv_progress"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="10dp"
            android:indeterminateBehavior="repeat"
            android:indeterminateDrawable="@drawable/anim" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_ad"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:layout_above="@id/rl_logo"/>

    <TextView
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:id="@+id/tv_skip"
        android:text="Skip"
        android:textSize="12dp"
        android:gravity="center"
        android:textColor="#fff"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_alpha_card"/>

</RelativeLayout>