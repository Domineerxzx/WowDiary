<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorWhite">

        <ImageView
            android:id="@+id/iv_close_add_goods"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@id/tv_title"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="添加商品"
            android:textColor="@color/colorBlack"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/colorLine" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_title"
        android:textColor="@color/colorLine"
        android:text="商品名称："
        android:textSize="12dp"
        android:layout_below="@id/rl_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_user_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/tv_name_title"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:gravity="center_vertical"
        android:hint="请输入商品名称"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorLine"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_price_title"
        android:textColor="@color/colorLine"
        android:text="价格："
        android:textSize="12dp"
        android:layout_below="@id/et_name"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <EditText
        android:id="@+id/et_price"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/shape_user_edit"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/tv_price_title"
        android:minHeight="80dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorBlack"
        android:textSize="15dp"
        android:gravity="left"
        android:paddingTop="10dp"
        android:hint="请输入价格"
        android:paddingLeft="10dp"
        android:textColorHint="@color/colorLine"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_image_title"
        android:textColor="@color/colorLine"
        android:text="图片："
        android:textSize="12dp"
        android:layout_below="@id/et_price"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp" />

    <ImageView
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:id="@+id/iv_delete_goods_image_show"
        android:background="@mipmap/close"
        android:layout_alignTop="@id/iv_goods_image_show"
        android:layout_alignRight="@id/iv_goods_image_show"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/iv_goods_image_show"
        android:layout_below="@id/tv_image_title"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_goods_image_show"
        android:text="上图为商品对外展示图片"
        android:layout_below="@id/iv_goods_image_show"
        android:gravity="center_horizontal"
        android:textColor="@color/colorLine"
        android:textSize="12dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/tv_add_goods"
        android:layout_alignParentBottom="true"
        android:background="@drawable/shape_user_button"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:text="添 加 商 品"
        android:gravity="center"/>

</RelativeLayout>